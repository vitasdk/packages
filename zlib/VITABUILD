pkgname=zlib
pkgver=1.3.2
pkgrel=1
url="https://www.zlib.net/"
source=("https://github.com/madler/zlib/releases/download/v$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('d7a0654783a4da529d1bb793b7ad9c3318020af77667bcae35f95d0e42a792f3')

build() {
  cd zlib-$pkgver
  ./configure --prefix=$prefix
  make -j$(nproc)
}

package () {
  cd zlib-$pkgver
  make DESTDIR=$pkgdir install
}
