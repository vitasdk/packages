pkgname=zlib
pkgver=1.2.11
pkgrel=1
url="http://www.zlib.net/"
source=("https://zlib.net/zlib-${pkgver}.tar.gz")
sha256sums=('c3e5e9fdd5004dcb542feda5ee4f0ff0744628baf8ed2dd5d66f8ca1197cb1a1')

build() {
  cd zlib-$pkgver
  ./configure --prefix=$prefix
  make -j$(nproc)
}

package () {
  cd zlib-$pkgver
  make DESTDIR=$pkgdir install
}
