pkgname=zlib
pkgver=1.3.1
pkgrel=1
url="https://www.zlib.net/"
source=("https://github.com/madler/zlib/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('17e88863f3600672ab49182f217281b6fc4d3c762bde361935e436a95214d05c')

build() {
  cd zlib-$pkgver
  ./configure --prefix=$prefix
  make -j$(nproc)
}

package () {
  cd zlib-$pkgver
  make DESTDIR=$pkgdir install
}
