pkgname=yaml-cpp
pkgver=9999
pkgrel=1
url="https://github.com/jbeder/yaml-cpp"
source=("git+https://github.com/jbeder/yaml-cpp.git")
sha256sums=('SKIP')

build() {
  cd $pkgname
  mkdir build && cd build
  cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_TOOLCHAIN_FILE=$VITASDK/share/vita.toolchain.cmake -DCMAKE_INSTALL_PREFIX=$prefix \
    -DYAML_CPP_BUILD_CONTRIB=OFF -DYAML_CPP_BUILD_TOOLS=OFF -DYAML_ENABLE_PIC=OFF
  make -j$(nproc)
}

package () {
  cd $pkgname/build
  make DESTDIR=$pkgdir install
}
