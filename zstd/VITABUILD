pkgname=libzstd
pkgver=1.5.4
pkgrel=1
url='https://facebook.github.io/zstd/'
source=("https://github.com/facebook/zstd/releases/download/v$pkgver/zstd-$pkgver.tar.gz")
sha256sums=('0f470992aedad543126d06efab344dc5f3e171893810455787d38347343a4424')
build() {
  cd zstd-$pkgver/lib

  make CC=arm-vita-eabi-gcc PREFIX=${prefix} libzstd.a libzstd.pc
}

package() {
  cd zstd-$pkgver/lib
  make DESTDIR="$pkgdir" PREFIX=${prefix} install-pc install-static install-includes
}
