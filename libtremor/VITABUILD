pkgname=libtremor
pkgver=9999
pkgrel=1
url="http://xiph.org/"
source=("git+https://gitlab.xiph.org/xiph/tremor.git#commit=293fd1c0")
sha256sums=('SKIP')

build() {
  cd tremor
  ./autogen.sh --host=arm-vita-eabi --prefix=$prefix --disable-shared --enable-static
  sed -ie 's/-D_REENTRANT/-D_REENTRANT -Wa,-mimplicit-it=thumb/g' Makefile
  make -j$(nproc)
}

package () {
  cd tremor
  make DESTDIR=$pkgdir install
}
