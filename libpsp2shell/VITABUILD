pkgname=libpsp2shell
pkgver=9999
pkgrel=1
url="https://github.com/Cpasjuste/PSP2SHELL"
source=("git://github.com/Cpasjuste/PSP2SHELL.git")
sha256sums=('SKIP')

build() {
  cd PSP2SHELL/psp2shell
  mkdir build && cd build
  cmake ..  -DCMAKE_TOOLCHAIN_FILE=$VITASDK/share/vita.toolchain.cmake -DCMAKE_INSTALL_PREFIX=$prefix
  make psp2shell
}

package () {
  cd PSP2SHELL/psp2shell/build
  make DESTDIR=$pkgdir install
}
