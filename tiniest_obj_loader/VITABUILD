pkgname=tiniest_obj_loader
pkgver=9999
pkgrel=1
url="https://github.com/Rinnegatamante"
source=("git+https://github.com/Rinnegatamante/tiniest_obj_loader.git")
sha256sums=('SKIP')

build() {
  cd $pkgname
  make -j$(nproc)
}

package () {
  mkdir -p $pkgdir/$VITASDK/arm-vita-eabi/lib
  mkdir -p $pkgdir/$VITASDK/arm-vita-eabi/include
  
  cd $pkgname
  cp libtoloader.a $pkgdir/$VITASDK/arm-vita-eabi/lib/
  cp source/$pkgname.h $pkgdir/$VITASDK/arm-vita-eabi/include/
}
