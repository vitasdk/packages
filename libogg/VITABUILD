pkgname=libogg
pkgver=1.3.6
pkgrel=1
url="https://www.xiph.org/ogg/"
source=("https://downloads.xiph.org/releases/ogg/libogg-${pkgver}.tar.xz")
sha256sums=('5c8253428e181840cd20d41f3ca16557a9cc04bad4a3d04cce84808677fa1061')

build() {
  cd $pkgname-$pkgver
  ./configure --host=arm-vita-eabi --prefix=$prefix --disable-shared --enable-static
  make -j$(nproc)
}

package () {
  cd $pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
