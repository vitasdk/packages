pkgname=sdl_ttf
pkgver=2.0.11.1
pkgrel=2
gitrev=eba26b54b5ce7f1c99a75a116c4719a432354f90
url="https://www.libsdl.org/projects/SDL_ttf/"
source=(
    "https://github.com/libsdl-org/SDL_ttf/archive/${gitrev}.zip"
)

sha256sums=(
    'SKIP'
)
depends=('sdl freetype libpng')

build() {
  cd SDL_ttf-${gitrev}
  ./configure --host=arm-vita-eabi --prefix=$prefix --disable-shared --enable-static --without-pic
  make -j$(nproc)

}

package () {
  cd SDL_ttf-${gitrev}
  make DESTDIR=$pkgdir install
}

